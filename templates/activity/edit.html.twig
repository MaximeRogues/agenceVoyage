{% extends 'base.html.twig' %}

{% block title %}Hello AddActivityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h2>Modifier l'activité</h2>
    <br>

    {{ form(form)}}

    {% if errors %}
        <ul>
            {% for error in errors %}
                <li>
                    {{error.message}}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <br>
    <a href="{{ path('activity') }}"><button class="btn btn-warning">Aller à la liste d'activités</button></a>       

{% endblock %}
